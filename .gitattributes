# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files
*.php text
*.css text
*.js text
*.json text
*.md text
*.txt text
*.xml text
*.yml text
*.yaml text
*.sh text eol=lf

# Denote binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.otf binary

# Archives
*.7z binary
*.gz binary
*.jar binary
*.rar binary
*.tar binary
*.zip binary

# Deployment scripts should use LF line endings
deploy.sh text eol=lf
*.sh text eol=lf

# WordPress files
wp-config.php text
.htaccess text

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.git export-ignore
README.md export-ignore
CHANGELOG.md export-ignore
deployment.log export-ignore
